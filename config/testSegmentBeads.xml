<?xml version="1.0"?>
<pipeline name="TestSegmentBeads">
    
    <!-- input to pipeline: {"img": img} -->

    <operation name="ConvertColorOp">
        <colorSpaceConstant name="cv2.COLOR_BGR2HSV">40L</colorSpaceConstant>
    </operation>

    <operation name="ShowImageOp">
        <windowName>"gray"</windowName>
        <on>False</on>
        <key>"grayImg"</key>
    </operation>

    <!--<operation name="ThresholdOp">
        <lowerHue>120</lowerHue>
        <upperHue>140</upperHue>
        <lowerSat>200</lowerSat>
        <upperSat>255</upperSat>
        <lowerVal>150</lowerVal>
        <upperVal>255</upperVal>
    </operation>-->

    <operation name="ThresholdOp">
        <lowerHue>30</lowerHue>
        <upperHue>50</upperHue>
        <lowerSat>50</lowerSat>
        <upperSat>200</upperSat>
        <lowerVal>50</lowerVal>
        <upperVal>255</upperVal>
    </operation>

    <operation name="BlurOp">
        <kernelSize>5</kernelSize>
    </operation>

    <operation name="ShowImageOp">
        <windowName>"gray blurred"</windowName>
        <on>False</on>
        <key>"img"</key>
    </operation>

    <repeat>
        <iterations>10</iterations>
        <operation name="ErodeOp">
            <kernelSize>3</kernelSize>
        </operation>
        <operation name="DilateOp">
            <kernelSize>3</kernelSize>
        </operation>
    </repeat>

    <operation name="ShowImageOp">
        <windowName>"Post Erode/Dilate"</windowName>
        <on>False</on>
        <key>"img"</key>
    </operation>

    <operation name="GetBlobsFromContoursOp">
        <blobType>"Bead"</blobType>
    </operation>

    <operation name="ShowImageOp">
        <windowName>"unfilteredBlobsImg"</windowName>
        <on>False</on>
        <key>"unfilteredBlobsImg"</key>
    </operation>

    <operation name="FilterBlobsOp">
        <lowerArea>5</lowerArea>
        <upperArea>500</upperArea>
        <lowerHue>0</lowerHue>
        <upperHue>255</upperHue>
    </operation>

    <operation name="ShowImageOp">
        <windowName>"filteredBlobsImg"</windowName>
        <on>False</on>
        <key>"filteredBlobsImg"</key>
    </operation>

</pipeline>