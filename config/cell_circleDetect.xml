    <operation name="WatershedOp">

    </operation>

    <operation name="DistanceTransformOp"/>

	<operation name="ShowImageOp">
        <windowName>"distance transformed image"</windowName>
        <on>True</on>
        <key>"img"</key>
    </operation>-->

</pipeline>


