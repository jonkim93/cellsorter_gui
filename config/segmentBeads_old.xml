<?xml version="1.0"?>
<pipeline name="SegmentBeads">
    
    <!-- input to pipeline: {"img": img} -->

    <operation name="ConvertColorOp">
        <colorSpaceConstant name="cv2.COLOR_BGR2HSV">40L</colorSpaceConstant>
    </operation>

    <operation name="ConvertColorOp">
        <colorSpaceConstant name="cv2.COLOR_BGR2GRAY">6L</colorSpaceConstant>
    </operation>

    <operation name="ShowImageOp">
        <windowName>"gray"</windowName>
        <on>False</on>
        <key>"grayImg"</key>
    </operation>

    <operation name="BlurOp">
        <kernelSize>5</kernelSize>
    </operation>

    <operation name="ShowImageOp">
        <windowName>"gray blurred"</windowName>
        <on>True</on>
        <key>"img"</key>
    </operation>

    <repeat>
        <iterations>10</iterations>
        <operation name="ErodeOp">
            <kernelSize>3</kernelSize>
        </operation>
        <operation name="DilateOp">
            <kernelSize>3</kernelSize>
        </operation>
    </repeat>

    <operation name="ShowImageOp">
        <windowName>"Post Erode/Dilate"</windowName>
        <on>True</on>
        <key>"img"</key>
    </operation>

    <!--
    <operation name="CannyOp">
        <minValue>5</minValue>
        <maxValue>50</maxValue>
    </operation>

    <operation name="ShowImageOp">
        <windowName>"Post canny"</windowName>
        <on>True</on>
        <key>"img"</key>
    </operation>

    <operation name="DilateOp">
        <kernelSize>6</kernelSize>
    </operation>

    <operation name="ErodeOp">
        <kernelSize>2</kernelSize>
    </operation> -->

    <operation name="ShowImageOp">
        <windowName>"temp"</windowName>
        <on>False</on>
        <key>"img"</key>
    </operation>

    <operation name="GetBlobsFromCirclesOp">
        <constant name="cv2.cv.CV_HOUGH_GRADIENT">3</constant>
        <dp>1</dp>
        <minDistance>50</minDistance>
        <param1>50</param1>
        <param2>1</param2>
        <minRadius>1</minRadius>
        <maxRadius>2</maxRadius>
        <blobType>"Bead"</blobType>
    </operation>

    <operation name="ShowImageOp">
        <windowName>"unfilteredBlobsImg"</windowName>
        <on>True</on>
        <key>"unfilteredBlobsImg"</key>
    </operation>

    <operation name="FilterBlobsOp">
        <lowerArea>200</lowerArea>
        <upperArea>10000</upperArea>
        <lowerHue>130</lowerHue>
        <upperHue>150</upperHue>
    </operation>

    <operation name="ShowImageOp">
        <windowName>"filteredBlobsImg"</windowName>
        <on>True</on>
        <key>"filteredBlobsImg"</key>
    </operation>

</pipeline>